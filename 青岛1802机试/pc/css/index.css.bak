@charset "utf-8";
*{margin:0;padding:0;}
ul,ol,li{list-style:none;}
a,u{text-decoration:none;}
b,strong{font-weight:normal;}
i,em{font-style:normal;}
h1,h2,h3,h4,h5,h6{font-size:16px;font-weight:normal;}
input{outline:none;}
img{border:0;display: block;}
.clear-fix:after{content:".";clear:both;display:block;height:0;overflow: hidden;visibility: hidden;}

.top-con,.banner-con,.services-con,.case-con{width:1082px;margin:0 auto;}
.tit-h2{background:pink url(../images/h2bg_03.png) no-repeat center;text-align:center;font-size:20px;color:#363636;line-height:20px;}
.tit-h3{font-size:14px;color:#9f9f9f;text-align:center;line-height:14px;background:orange;text-transform:uppercase;margin-top:11px;}
/* top */
.top-con{height:81px;}
.logo{width:162px;height:62px;padding-top:19px;float:left;}
.nav{width:646px;height:81px;float:right;}
.nav li{float:left;}
.nav li a{display:block;height:81px;padding:0 28px;line-height:81px;font-size:14px;color:#646464;float:left;}

/* banner */
#banner{height:469px;background:url(../images/banner_02.jpg) no-repeat center;}
.banner-con{height:469px;}

/* services */
.services-con{min-height:344px;_height:344px;padding-top:63px;}
.services-show{margin-top:34px;}
.fuwu{width:200px;text-align:center;float:left;margin:0 35px;display:inline;}/*dispaly:inline 解决ie6margin双倍间距问题*/
.fuwu img{margin:0 auto;}
.fuwu h4{font-size:18px;font-weight:900;color:#434343;text-transform: uppercase;line-height:18px;margin:34px 0 19px;}
.fuwu p{font-size:14px;color:#6d6d6d;line-height:22px;}

/* case */
#case{background:#f8f8f8;}
.case-con{min-height:404px;_height:404px;padding-top:56px;}
.case-con .tit-h2{color:#66c5b4;}
.case-box{width:1055px;margin:38px auto 0;}
.case-box a{float:left;}
.case-box .mar{margin:0 19px;}

.case-btn{display:block;width:176px;height:37px;text-align:center;line-height:37px;font-size:14px;color:#fff;text-transform: uppercase;background:url(../images/btnbg_03.jpg) no-repeat;margin:36px auto 0;}
